'use strict';

angular.module('app', ['ngResource']).config(['$routeProvider', function($routeProvider, $locationProvider) {
	$routeProvider
		.when('/', {controller: 'ProjectIndexController', templateUrl: '<%= asset_path('templates/index.html') %>'} )
		.when('/project/new', {controller: 'ProjectCreateController', templateUrl: '<%= asset_path('templates/new.html') %>'})
		.when('/project/:id', {controller: 'ProjectShowController', templateUrl: '<%= asset_path('templates/show.html') %>'})
		.when('/project/:id/edit', {controller: 'ProjectEditController', templateUrl: '<%= asset_path('templates/edit.html')%>'})
		.otherwise({redirectTo: '/'});
}]);